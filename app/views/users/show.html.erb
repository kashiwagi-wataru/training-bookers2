

<div class="container"> 
    <div class="row"> 
        <div class="col-lg-3" > 
             
    <h2>user info</h2>

    <div width="200px" height="60px"><%= attachment_image_tag @user, :profile_image , size: '80x80',fallback:"no_image.jpg"%></div>
    

    <table frame="abobe" rules="rows">
       
    <table>
        <tr>
            <th width="100px" height="40px">name:</th>
            <th><%= @user.username %></th>
        </tr>
        <tr>
            <th height="40px">introduction:</th>
            <th><%= @user.introduction %></th>
        </tr>

    </table>
       
        <%= link_to edit_user_path(current_user.id) do %><i class="col-xs-7 btn btn-default glyphicon glyphicon-wrench"></i><% end %>
        </br>
        
        <h3>NewBook</h3>
    <%= form_for(@book) do |f| %>
        <h5>title</h5>
        <%= f.text_field :book_title %></br>
        <h5>opinion</h5>
        <%= f.text_area :book_body %></br>
        <%= f.submit %>
    <% end %>
        </div>
        <div class="col-lg-9" >
        <table frame="below" rules="rows">
        <tr>
               <th  width="200px"></th>
               <th  width="300px"><font size=+2>Title</font></th>
               <th  width="300px"><font size=+2>Body</font></th>
           </tr>
           <% @books.each do |book| %>
           <tr> 
               <th width="200px" height="60px"><%= attachment_image_tag @user, :profile_image , size: '70x70',fallback:"no_image.jpg"%></th>
               <th width="100px" height="60px"><%= link_to book_path(book.id) do %><%= book.book_title %></th><% end %>
               <th width="300px"><%= book.book_body %></th>
               
                       </tr>
           <% end %>
           
       </table>